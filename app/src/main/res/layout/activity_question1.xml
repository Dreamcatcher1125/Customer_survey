<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Question1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="274dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/question1_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question1_title"
            android:layout_marginTop="100px"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/question1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/question1_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100px"
            android:text="@string/question1_text" />

    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_back"
        android:layout_centerHorizontal="true"
        android:onClick="back"
        android:layout_marginTop="300px"
        android:layout_below="@id/question1_text"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>